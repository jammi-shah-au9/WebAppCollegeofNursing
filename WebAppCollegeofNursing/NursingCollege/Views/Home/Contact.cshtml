                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send Feedback" class="btn btn-primary btn-block" />
                </div>
            </div>
        </div>
    }
    <div class="map-wrap" style="width:100%; height: 445px;" id="map"></div>
</div>

