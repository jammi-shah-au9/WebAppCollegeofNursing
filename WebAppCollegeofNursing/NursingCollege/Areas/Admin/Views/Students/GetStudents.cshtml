@model IEnumerable<ModelLayer.UserAccount>

@{
    ViewBag.Title = "GetStudents";
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("EditStudent", "Students", new { id=item.Id })')"><i class="glyphicon glyphicon-pencil"></i></a>&nbsp;
            <a class="btn btn-primary btn-sm" onclick="Details('@Url.Action("StudentDetails", "Students", new { id=item.Id })')">Details</a>&nbsp;
            <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("DeleteStudent", "Students", new { id=item.Id })')"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
}

</table>
